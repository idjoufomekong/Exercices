<UserControl x:Class="Trombinoscope.UCEmployes"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Trombinoscope"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <DockPanel>
        <Image Height="100" DockPanel.Dock="Top" HorizontalAlignment="Left" Source="pack://application:,,,/Images/Employes.jpg" 
               Margin="10"/>
        <ListBox x:Name="lbEmp" DockPanel.Dock="Left">

        </ListBox>
        <StackPanel Margin="5">
            <TextBlock x:Name="tbId" Margin="3"></TextBlock>
            <TextBlock x:Name="tbNom" Margin="3"></TextBlock>
            <TextBlock x:Name="tbPrenom" Margin="3"></TextBlock>
        </StackPanel>
    </DockPanel>
</UserControl>
